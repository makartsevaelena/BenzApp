<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.makartsevaelena.benzapp.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:padding="3dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">
            <TextView
                    android:id="@+id/title_activitymain_terminalcount"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выберите номер колонки:"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

        </LinearLayout>

        <GridView
                android:id="@+id/gridViewTerminalCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:numColumns="3"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
            <TextView
                    android:id="@+id/title_activitymain_gasolinetype"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выберите тип топлива:"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

        </LinearLayout>

        <GridView
                android:id="@+id/gridViewGazolineType"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:numColumns="3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

            <TextView
                    android:id="@+id/textview_activitymain_gasolinevalue"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Объем топлива:"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
            <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
        </LinearLayout>
<!--        <Button-->
<!--                android:id="@+id/button_server"-->
<!--                android:text="server"-->
<!--                android:background="@color/colorGridView"-->
<!--                android:textColor="@android:color/white"-->
<!--                android:layout_width="138dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="10dp"/>-->
    </LinearLayout>


    <Button
            android:id="@+id/button_activitymain_pay"
            android:text="Оплатить"
            android:background="@color/colorGridView"
            android:textColor="@android:color/white"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"/>

    <include
            layout="@layout/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

