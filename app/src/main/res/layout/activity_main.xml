<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.makartsevaelena.benzapp.MainActivity">

    <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:padding="3dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/titleTerminalCount"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="Выберите номер колонки"
        />
        <GridView
                android:id="@+id/gridViewTerminalCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="20dp"
                android:horizontalSpacing="20dp"
                android:numColumns="3"/>

        <TextView
                android:id="@+id/titleGasolineType"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выберите тип топлива"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
        />
        <GridView
                android:id="@+id/gridViewGazolineType"
                android:verticalSpacing="20dp"
                android:horizontalSpacing="20dp"
                android:numColumns="3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        <TextView
                android:id="@+id/gasolineValue"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сумма и объем топлива"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
        />

    </LinearLayout>

    <Button
            android:text="Оплатить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_pay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"/>

    <include
            layout="@layout/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

