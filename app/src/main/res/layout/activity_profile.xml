<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:padding="3dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/title_profile_name"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:paddingStart="3dp"
                android:paddingTop="7dp"
                android:textColor="@android:color/white"
                android:background="@color/colorGridView"
                android:text="ФИО"/>
        <TextView
                android:id="@+id/textview_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:text="Иван Иванов"/>
        <TextView
                android:id="@+id/textview_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:text="E-mail"/>
        <TextView
                android:id="@+id/title_profile_cardnumber"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:paddingStart="3dp"
                android:paddingTop="7dp"
                android:textColor="@android:color/white"
                android:background="@color/colorGridView"
                android:text="Карта для оплаты"/>
        <TextView
                android:id="@+id/textview_profile_cardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:text="**** **** **** 0000"/>
        <TextView
                android:id="@+id/title_profile_preferences"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="3dp"
                android:paddingTop="7dp"
                android:textSize="16sp"
                android:background="@color/colorGridView"
                android:textColor="@android:color/white"
                android:text="Предпочтения"/>
        <TextView
                android:id="@+id/textview_profile_gazolinetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:text="Тип топлива: АИ-95"/>
    </LinearLayout>
    <include
            layout="@layout/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
